  <%= form_tag "/albums/#{@album.id}", method: :patch do %>
    <div>
    <%= label_tag :title %>
    <%= text_field_tag :title, @album.title %>
    <%= label_tag :artist %>
    <%= text_field_tag :artist %>
    <%= label_tag :genre %>
    <%= text_field_tag :genre %>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
    <div>
    <%= submit_tag "Submit" %>
    </div>
    <% end %>


