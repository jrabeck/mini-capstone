  <body>
  
      <div class="container">
      <% flash.each do |name, message| %> 
        <div class="alert alert-<%= name %> alert-dismissible" role="alert"> 
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
          </button>
          <p> <%= message %> </p>
        </div>

        <% end %>
      </div>
      
    <%= yield %>
    
  </body>
